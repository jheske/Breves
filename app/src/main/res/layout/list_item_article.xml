<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/card_margin"
    app:cardPreventCornerOverlap="false"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="@string/desc_title"
            tools:src="@drawable/tools_thumb_image"/>

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/card_text_margin"
            android:paddingRight="@dimen/card_text_margin"
            android:paddingLeft="@dimen/card_text_margin"
            android:textColor="@color/textColorPrimary"
            android:ellipsize="end"
            android:maxLines="4"
            tools:text="Article Title"/>

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/card_text_margin"
            android:paddingRight="@dimen/card_text_margin"
            android:paddingLeft="@dimen/card_text_margin"
            android:textColor="@color/textColorSecondary"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="Subtitle"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
